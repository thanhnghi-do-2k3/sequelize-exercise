<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Blogs</h2>
                    <div class="breadcrumb__option">
                        <a href="index.html">Home</a>
                        <span>Blog</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Blog Section Begin -->
<section class="blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5">
                <div class="blog__sidebar">
                    <div class="blog__sidebar__search">
                        <form action="#">
                            <input type="text" placeholder="Search...">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Categories</h4>
                        <ul>
                            <li><a href="/blogs">All</a></li>
                            <li><a href="/blogs?category=Beauty">Beauty (20)</a></li>
                            <li><a href="/blogs?category=Food">Food (5)</a></li>
                            <li><a href="/blogs?category=Life Style">Life Style (9)</a></li>
                            <li><a href="/blogs?category=Travel">Travel (10)</a></li>
                        </ul>
                    </div>

                    <div class="blog__sidebar__item">
                        <h4>Search By Tags</h4>
                        <div class="blog__sidebar__item__tags">
                            <a href="/blogs?tag=Apple">Apple</a>
                            <a href="/blogs?tag=Beauty">Beauty</a>
                            <a href="/blogs?tag=Vegetable">Vegetables</a>
                            <a href="/blogs?tag=Fruit">Fruit</a>
                            <a href="/blogs?tag=Healthy Food">Healthy Food</a>
                            <a href="/blogs?tag=Lifestyle">Lifestyle</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-7">
                <div class="row">
                    {{#each blogs}}
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="blog__item">
                                <div class="blog__item__pic">
                                    <img src="{{imagePath}}" alt="">
                                </div>
                                <div class="blog__item__text">
                                    <ul>
                                        <li><i class="fa fa-calendar-o"></i> May 4,2019</li>
                                        <li><i class="fa fa-comment-o"></i> 5</li>
                                    </ul>
                                    <h5><a href="/blogs/{{id}}"> {{title}} </a></h5>
                                    <p> {{summary}} </p>
                                    <a href="/blogs/{{id}}" class="blog__btn">READ MORE <span
                                            class="arrow_right"></span></a>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                    <div class="col-lg-12">
                        {{{createPagination
                            pagination
                            paginationClass="product__pagination blog__pagination"
                            leftText="<i class='fa fa-long-arrow-left'></i>"
                            rightText="<i class='fa fa-long-arrow-right'></i>"    
                        }}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Section End -->

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Select the <ul> element
    var ulElement = document.querySelector('.product__pagination');
    
    if (ulElement) {
      // Create a new <div> element
      var divElement = document.createElement('div');
      divElement.className = ulElement.className; // Transfer the class names
      
      // Move all children from <ul> to <div>
      while (ulElement.firstChild) {
        divElement.appendChild(ulElement.firstChild);
      }
      
      // Replace the <ul> with the new <div>
      ulElement.parentNode.replaceChild(divElement, ulElement);
    }

    // Select all <li> elements
    document.querySelectorAll('.product__pagination li').forEach(liElement => { 
        if(liElement) { 
          var aElement = liElement.querySelector('a'); 
          if (aElement) {
            liElement.parentNode.replaceChild(aElement, liElement); 
          } 
        } 
    });
});

</script>